{
	"compilerOptions": {
		"lib": [
			"dom",
			"dom.iterable",
			"es2015"
		],
		"allowJs": true,
		"target": "ES2020",
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"incremental": true,
		"paths": {
			"@/app/*": [
				"./app/*"
			],
			"@/components/*": [
				"./components/*"
			],
			"@/lib/*": [
				"./lib/*"
			],
			"@/locales/*": [
				"./locales/*"
			],
			"@/build/*": [
				"./build/*"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"build.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
